$color1 = #333
$color2 = #2b2b2b
$blanco = #fff
* 
    margin 0
    padding 0

[draggable="true"] 
    user-select none

.none
    display none

.block
    display block
    color $blanco

.container 
    background-color #232323
    width 100%
    height 100%
    position absolute
    overflow hidden

.lienzo 
    background-color $blanco
    width 900px
    height 500px
    margin 5px 0px 0px 15px
    position absolute
    overflow hidden

.panel 
    background-color $color1
    width 415px
    margin 5px 15px 0px 0px
    height 500px
    position absolute
    right 0px

.contenedor_panel
    width 415px
    height 500px
    position absolute

.panel_interno
    width 370px
    height 500px
    position absolute
.time_line 
    background-color $color1
    position absolute
    bottom 0px
    left 50%
    transform translate(-50%, 0%)
    width 98%
    height 140px

.img 
    position absolute
    overflow hidden


.img_watch 
    position absolute
    background rgba(60, 255, 0, 0.486)

.img_interna 
    width 100%
    height 100%
    position absolute

.name_attribute 
    color $blanco
    font-family Verdana, Geneva, Tahoma, sans-serif
    margin 0px 0px
    font-size 15px

.input 
    background-color $blanco
    border none
    padding 1px 10px
    border-radius 5px
    margin 5px 5px
    width 50px
    right 0px

.table 
    background $color2
    margin 5px
    border-radius 5px
    float right
    text-align center


label 
    padding 5px 10px
    background $color2
    font-family Verdana, Geneva, Tahoma, sans-serif
    display table
    cursor pointer
    border-radius 50px
    position absolute 
    bottom 10px
    left 10px
    color rgb(255, 255, 255)

input[type="file"] 
    display none

.emparejar 
    color $blanco
    background-color $color2
    position absolute
    padding 10px
    margin-top -20px
    margin-left -20px
    cursor pointer
    border-radius 5px

.emparejar_activo 
    color #1df900
    background-color $color2
    position absolute
    padding 10px
    margin-top -20px
    margin-left -20px
    cursor pointer
    border-radius 5px

.alto_1,
.alto_2,
.ancho_1,
.ancho_2 
    width 10px
    height 10px
    background-color $blanco
    border-radius 50%
    border solid 1px #000
    position absolute

.alto_1 
    cursor move

.alto_2 
    cursor move

.ancho_1 
    cursor move

.ancho_2 
    cursor move

.imagenes_puntos
    background-color red

.columna
 width 45px
 height 100%
 background $color2
 position absolute
 right 0px

.btn_off
    color #ccc
    transition all ease .3s
    border-right none

ul
    list-style none
    font-size 20px
    li.btn_off,.btn_on
        padding-top 10px
        height 30px
        cursor pointer
        text-align center

.red_icon
    color #ff3232

.btn_on
    color $blanco
    background-color $color1
    transition all ease .3s
    border-right solid $blanco 2px

.capas
    background $color2
    width 150px
    height 98%
    position absolute
    right 0px
    margin 5px 5px

.capa_img_off
    background $color1
    transition all ease .3s
    width 140px
    height 70px
    margin 5px 5px

.capa_img_on
    background #4f4f4f
    transition all ease .3s
    width 140px
    height 70px
    margin 5px 5px

.img_capa
    width 60px
    height 60px
    background rgba(255,255,255,.1)
    margin 5px